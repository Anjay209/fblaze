rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public access to 'submissions' folder (free-tier optimized)
    match /submissions/{fileName} {
      allow read: if true;  // Free public reads
      allow write: if request.auth != null &&  // Free auth check
                   request.resource.size < 5 * 1024 * 1024; // 5MB limit (free-tier safe)
    }

    // Block everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}